<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity repository-class="PetroPack\ProductoBundle\Repository\ProductoRepository" name="PetroPack\ProductoBundle\Entity\Producto">
    <id name="id" type="integer" column="id">
      <generator strategy="AUTO"/>
    </id>
    <field name="nombre" type="string" column="nombre" length="100"/>
    <field name="descripcion" type="string" column="descripcion" length="100"/>
    <field name="presentacion" type="string" column="presentacion" length="100"/>
    <field name="precio_unidad" type="float" column="precio_unidad"/>
    <field name="tipo" type="string" column="tipo" length="100"/>
    <field name="cantidad" type="integer" column="cantidad"/>
    <field name="cod_producto" type="string" column="cod_producto" length="20"/>
  </entity>
</doctrine-mapping>
