<div class="modal-dialog">
    <div class="modal-content animated bounceInRight">
        <div class="modal-body">
            <div class="form-group">
                <label>Cliente</label>
                <select id="cliente_select_edit" class="form-control select2" style="width: 100%;">
                    {% for cliente in clientes %}
                        <option value="{{ cliente.id }}">{{ cliente.nombre }}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="form-group">
                <label>Producto</label>
                <select id="producto_select_edit" class="form-control select2" style="width: 100%;">
                    {% for producto in productos %}
                        <option value="{{ producto.id }}">{{ producto.descripcion }}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="form-group">
                <label>Cantidad</label>
                <input id="cantidad_edit" type="text" class="form-control" placeholder="Enter ...">
            </div>
            <div class="form-group">
                <label>Descuento</label>
                <select id="descuento_edit" class="form-control select2" style="width: 100%;">
                    <option selected value=""></option>
                    <option value="5">5%</option>
                    <option value="10">10%</option>
                    <option value="15">15%</option>
                </select>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-white" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>
